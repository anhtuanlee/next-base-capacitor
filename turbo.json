{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/next-web/.next/**", "apps/next-app/out/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "export": {
      "dependsOn": ["^build"],
      "outputs": ["apps/next-app/out/**"],
      "cache": true
    }
  }
}
