{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["next", "react", "react-dom", "node"],
    "paths": {
      "@/*": ["./*"],
      "@shared/ui": ["../../shared/ui"],
      "@shared/ui/*": ["../../shared/ui/src/*"],
      "@shared/utils": ["../../shared/utils"],
      "@shared/utils/*": ["../../shared/utils/src/*"],
      "@shared/services": ["../../shared/services"],
      "@shared/services/*": ["../../shared/services/src/*"],
      "@shared/types": ["../../shared/types"],
      "@shared/types/*": ["../../shared/types/src/*"],
      "@shared/state": ["../../shared/state"],
      "@shared/state/*": ["../../shared/state/src/*"],
      "@shared/providers": ["../../shared/providers"],
      "@shared/providers/*": ["../../shared/providers/src/*"],
      "@shared/auth": ["../../shared/auth"],
      "@shared/auth/*": ["../../shared/auth/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../shared/types/src/global.d.ts"
  ],
  "exclude": ["node_modules"]
}
